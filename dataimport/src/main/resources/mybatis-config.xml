<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties resource="db.syslog.properties" />

    <typeHandlers>
        <typeHandler javaType="org.joda.time.DateTime" handler="nl.tecon.ucm.domain.mybatis.DateTimeTypeHandler"/>
        <typeHandler javaType="org.joda.time.LocalDateTime" handler="nl.tecon.ucm.domain.mybatis.LocalDateTimeTypeHandler"/>
        <typeHandler javaType="nl.tecon.ucm.domain.FeatureName" handler="nl.tecon.ucm.domain.mybatis.FeatureNameTypeHandler"/>
        <typeHandler javaType="nl.tecon.ucm.domain.FeatureStatus" handler="nl.tecon.ucm.domain.mybatis.FeatureStatusTypeHandler"/>
        <typeHandler javaType="nl.tecon.ucm.domain.ForwardingReason" handler="nl.tecon.ucm.domain.mybatis.OptForwardingReasonTypeHandler"/>
    </typeHandlers>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="${db.sysLog.driverClassName}"/>
                <property name="url" value="${db.sysLog.url}"/>
                <property name="username" value="${db.sysLog.username}"/>
                <property name="password" value="${db.sysLog.password}"/>
            </dataSource>
        </environment>
    </environments>


</configuration>
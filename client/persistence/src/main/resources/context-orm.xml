<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="cmeDataSource"/>
        <property name="configLocation" value="classpath:mybatis-config.xml"/>
    </bean>

    <bean id="cdrDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.cdr.dao.CdrDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean id="cdrVsaDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.cdr.dao.CdrVsaDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean id="huntGroupDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.summary.dao.HuntGroupDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean id="huntGroupSummaryDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.summary.dao.HuntGroupSummaryDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean id="agentDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.summary.dao.AgentDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean id="agentSummaryDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.summary.dao.AgentSummaryDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean id="queueSummaryDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="nl.tecon.cme.client.persistence.summary.dao.QueueSummaryDao"/>
        <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="nl.tecon.cme.client.persistence"/>
        <property name="annotationClass" value="nl.tecon.cme.client.persistence.Dao"/>
    </bean>
</beans>